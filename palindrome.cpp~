#include <iostream>
#include <cstring>

using namespace std;

int main() {
  const int max = 81;
  char input[max], sorted[max];

  cout << "Enter a string: ";
  cin.getline(input, max);

  int j = 0;
  for (int i = 0; input[i] != '\0'; i++) {
    char c = input[i];

    if (c >= 'A' && c <= 'Z')
      c = c +  ('a' - 'A');

    if ((c >= 'a' && c <= 'z') || (c >= '0' && c <= '9'))
	sorted[j++] = c;
	}
  sorted[j] = '\0';

  bool palindrome = true;
  for (int i = 0; i < j / 2; i++) {
    if (sorted[i] != sorted[j - 1 -i]) {
	palindrome = false;
	break;
      }
    }
  cout << (palindrome ? "Its a palindrome" : "Not a palindrome") << endl;
  return 0;
}
